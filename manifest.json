{
  "manifest_version": 3,
  "name": "AI Phishing Detector Pro",
  "version": "2.0",
  "description": "An advanced AI-powered extension to detect and block phishing websites and emails with real-time protection.",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "privacy",
    "http://*/*",
    "https://*/*",
    "identity",
    "notifications",
    "cookies",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["images/*", "style/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "contextMenus",
    "notifications",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "https://www.virustotal.com/api/v3/*"
  ]
}
